
@{
    ViewData["Title"] = "Audit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model Banker.Models.ViewModels.AuditViewModel;
<h2 class="text-center display-4">Audit Dashboard</h2>
<div>
    @if (ViewBag.Success != null)
    {
        <span class="text-end alert alert-success" role="alert">@ViewBag.Success</span>
    }
    @if (ViewBag.Error != null)
    {
        <span class="text-end alert alert-danger" role="alert">@ViewBag.Error</span>
    }

</div>
<hr />
<div class="row">
    <div class="col-2">
        <label class="control-label">Transaction Type</label>
        <select class="form-control" id="type" onchange="HandleChangeTType(this.value)">
            <option>..select..</option>
            <option value="Deposit">Deposit</option>
            <option value="Withdraw">Withdraw</option>
        </select>
    </div>
    <div class="col-2">
        <label class="control-label">Log Type</label>
        <select class="form-control" id="type" onchange="HandleChangeType(this.value)">
            <option>..select..</option>
            <option value="Edited">Edited</option>
            <option value="Added">Added</option>
            <option value="Deleted">Deleted</option>
        </select>
    </div>
    <div class="col-2">
        <label class="control-label">Transaction Date</label>
        <input type="date" data-date-format="DD MMMM YYYY"  onchange="HandleDate(event);" />
    </div>
</div>
<br />
<button class="btn-primary col-2 align-content-end" onclick="reset()">Reset</button>
<br />
    <div class="border backgroundWhite col-lg">
        <br/>
        <table id="dtBasicExample" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th class="th-sm text-center">User ID</th>
                    <th class="th-sm text-center">Name</th>
                    <th class="th-sm text-center">Amount</th>
                    <th class="th-sm text-center">Transaction Id</th>
                    <th class="th-sm text-center">Transaction Date & Time</th>
                    <th class="th-sm text-center">Transaction Type</th>
                    <th class="th-sm text-center">Source</th>
                    <th class="th-sm text-center">Type</th>
                    <th class="th-sm text-center">Log Type</th>
                </tr>
            </thead>
            <tbody id="tableData">
            </tbody>
        </table>
    </div>
    @section Scripts {
        <script src="~/js/audit.js"></script>
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
