
@{
    ViewData["Title"] = "Audit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model Banker.Models.ViewModels.AuditViewModel;
<h1 class="display-4">Audit Dashboard</h1>
<div>
    @if (ViewBag.Success != null)
    {
        <span class="text-end alert alert-success" role="alert">@ViewBag.Success</span>
    }
    @if (ViewBag.Error != null)
    {
        <span class="text-end alert alert-danger" role="alert">@ViewBag.Error</span>
    }
    @if (TempData["Success"] != null)
    {
        <span class="text-end alert alert-success" role="alert">@ViewBag.Success</span>
    }

</div>
<br />
<br />
<div class="border backgroundWhite">
    <div class="row">
        <div class="col-12">
            <h2 class="text-primary text-center">Transaction Table</h2>
        </div>
    </div>
    <table id="tblData" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>User ID</th>
                <th>Name</th>
                <th>Amount</th>
                <th>Transaction Id</th>
                <th>Transaction Date & Time</th>
                <th>Transaction Type</th>
                <th>Source</th>
                <th>Type</th>
                <th>Log Type</th>
            </tr>
        </thead>
    </table>
</div>
@section Scripts {
    <script src="~/js/audit.js"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}